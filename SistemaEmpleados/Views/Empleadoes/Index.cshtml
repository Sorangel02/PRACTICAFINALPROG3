@model IEnumerable<SistemaEmpleados.Models.Empleado>
@using System.Globalization

@{
    ViewData["Title"] = "Listado de Empleados";
}

<div class="card shadow p-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-users"></i> @ViewData["Title"]</h5>
        <div>
            <a asp-action="Create" class="btn btn-warning"><i class="fas fa-plus"></i> Nuevo Empleado</a>
            <a asp-action="ExportarEmpleadosACsv" class="btn btn-success"><i class="fas fa-file-csv"></i> Exportar a CSV</a>
        </div>
    </div>
    <div class="card-body">
        <!-- Mensaje de éxito (si existe) -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Fecha de Inicio</th>
                    <th>Salario</th>
                    <th>Estado</th>
                    <th>Departamento</th>
                    <th>Cargo</th>
                    <th>Tiempo en la empresa</th>
                    <th>AFP</th>
                    <th>ARS</th>
                    <th>ISR</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var empleado in Model)
                {
                    <tr>
                        <td>@empleado.Nombre</td>
                        <td>@empleado.FechaInicio.ToShortDateString()</td>
                        <td>@empleado.Salario.ToString("C", CultureInfo.CreateSpecificCulture("es-DO"))</td>
                        <td>@(empleado.Estado ? "Activo" : "Inactivo")</td>
                        <td>@empleado.Departamento?.Nombre</td>
                        <td>@empleado.Cargo?.Nombre</td>
                        <td>@empleado.TiempoEnEmpresa</td>
                        <td>@empleado.AFP.ToString("C", CultureInfo.CreateSpecificCulture("es-DO"))</td>
                        <td>@empleado.ARS.ToString("C", CultureInfo.CreateSpecificCulture("es-DO"))</td>
                        <td>@empleado.ISR.ToString("C", CultureInfo.CreateSpecificCulture("es-DO"))</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@empleado.EmpleadoId" class="btn btn-sm btn-info"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@empleado.EmpleadoId" class="btn btn-sm btn-secondary"><i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@empleado.EmpleadoId" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</table>