@model IEnumerable<SistemaEmpleados.Models.Empleado>
@using System.Globalization

@{
    ViewData["Title"] = "Listado de Empleados";
}

<h1>Listado de Empleados</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar nuevo empleado</a>
    <a asp-action="ExportarEmpleadosACsv" class="btn btn-success">Exportar a CSV</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Fecha de Inicio</th>
            <th>Salario</th>
            <th>Estado</th>
            <th>Departamento</th>
            <th>Cargo</th>
            <th>Tiempo en la empresa</th>
            <th>AFP</th>
            <th>ARS</th>
            <th>ISR</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var empleado in Model)
        {
            <tr>
                <td>@empleado.Nombre</td>
                <td>@empleado.FechaInicio.ToShortDateString()</td>
                <td>@empleado.Salario.ToString("C", CultureInfo.CreateSpecificCulture("es-DO"))</td>
                <td>@(empleado.Estado ? "Activo" : "Inactivo")</td>
                <td>@empleado.Departamento?.Nombre</td>
                <td>@empleado.Cargo?.Nombre</td>
                <td>@empleado.TiempoEnEmpresa</td>
                <td>@empleado.AFP.ToString("C", CultureInfo.CreateSpecificCulture("es-DO"))</td>
                <td>@empleado.ARS.ToString("C", CultureInfo.CreateSpecificCulture("es-DO"))</td>
                <td>@empleado.ISR.ToString("C", CultureInfo.CreateSpecificCulture("es-DO"))</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@empleado.EmpleadoId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@empleado.EmpleadoId" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@empleado.EmpleadoId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>