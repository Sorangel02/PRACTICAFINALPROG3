@model IEnumerable<SistemaEmpleados.Models.VacacionesDisponible>

@{
    ViewData["Title"] = "Listado de Vacaciones Disponibles";
}

<h1>Listado de Vacaciones Disponibles</h1>

<!-- Mensaje de éxito (si existe) -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar nuevas vacaciones</a>
</p>

<!-- Opcional: Formulario de búsqueda (si lo necesitas más adelante)
<form asp-controller="VacacionesDisponibles" asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar por empleado o año..." />
        <button type="submit" class="btn btn-primary">Buscar</button>
        <a asp-action="Index" class="btn btn-secondary">Limpiar</a>
    </div>
</form>
-->

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Anio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiasAsignados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiasTomados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiasRestantes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleado)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Anio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiasAsignados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiasTomados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiasRestantes)
                </td>
                <td>
                    <!-- Corrección: Mostrar el nombre del empleado en lugar del ID -->
                    @Html.DisplayFor(modelItem => item.Empleado.Nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VacacionesId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.VacacionesId" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.VacacionesId" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>