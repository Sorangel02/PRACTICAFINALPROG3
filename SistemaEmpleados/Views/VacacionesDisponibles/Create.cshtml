@model SistemaEmpleados.Models.VacacionesDisponible

@{
    ViewData["Title"] = "Registrar Vacaciones";
}

<h1>Registrar Vacaciones</h1>

<h4>Vacaciones Disponibles</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="EmpleadoId" class="control-label">Empleado</label>
                <select asp-for="EmpleadoId" class="form-control" asp-items="ViewBag.EmpleadoId" id="empleadoDropdown">
                    <option value="">-- Seleccione un empleado --</option>
                </select>
                <span asp-validation-for="EmpleadoId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label class="control-label">Fecha de Inicio</label>
                <input id="fechaInicio" class="form-control" readonly />
            </div>

            <div class="form-group mt-3">
                <label class="control-label">Años de Servicio</label>
                <input id="aniosDeServicio" class="form-control" readonly />
            </div>

            <div class="form-group mt-3">
                <label asp-for="Anio" class="control-label"></label>
                <input asp-for="Anio" class="form-control" readonly />
                <span asp-validation-for="Anio" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="DiasAsignados" class="control-label"></label>
                <input asp-for="DiasAsignados" class="form-control" readonly />
                <span asp-validation-for="DiasAsignados" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="DiasTomados" class="control-label"></label>
                <input asp-for="DiasTomados" class="form-control" readonly />
                <span asp-validation-for="DiasTomados" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="DiasRestantes" class="control-label"></label>
                <input asp-for="DiasRestantes" class="form-control" readonly />
                <span asp-validation-for="DiasRestantes" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#empleadoDropdown').change(function () {
                var empleadoId = $(this).val();
                if (empleadoId) {
                    $.ajax({
                        url: '/VacacionesDisponibles/GetEmpleadoDetails/' + empleadoId,
                        type: 'GET',
                        success: function (data) {
                            if (data) {
                                $('#fechaInicio').val(data.fechaInicio);
                                $('#aniosDeServicio').val(data.aniosDeServicio);
                                
                                $('#Anio').val(new Date().getFullYear());
                                $('#DiasAsignados').val(data.diasAsignados);
                                $('#DiasTomados').val(0);
                                $('#DiasRestantes').val(data.diasAsignados);
                            }
                        },
                        error: function (error) {
                            console.error('Error al obtener los detalles del empleado:', error);
                        }
                    });
                } else {
                    $('#fechaInicio').val('');
                    $('#aniosDeServicio').val('');
                    $('#Anio').val('');
                    $('#DiasAsignados').val('');
                    $('#DiasTomados').val('');
                    $('#DiasRestantes').val('');
                }
            });
        });
    </script>
}