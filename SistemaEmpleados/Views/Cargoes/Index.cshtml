@model IEnumerable<SistemaEmpleados.Models.Cargo>

@{
    ViewData["Title"] = "Listado de Cargos";
}

<h1>Listado de Cargos</h1>

<!-- Mensaje de éxito (si existe) -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar nuevo cargo</a>
</p>

<!-- Opcional: Formulario de búsqueda (si lo necesitas más adelante)
