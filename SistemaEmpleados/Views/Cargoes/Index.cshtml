@model IEnumerable<SistemaEmpleados.Models.Cargo>

@{
    ViewData["Title"] = "Listado de Cargos";
}

<div class="card shadow p-3">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-briefcase"></i> @ViewData["Title"]</h5>
        <a asp-action="Create" class="btn btn-warning"><i class="fas fa-plus"></i> Nuevo Cargo</a>
    </div>

    <div class="card-body">
        <!-- Mensaje de éxito (si existe) -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.CargoId" class="btn btn-sm btn-info"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.CargoId" class="btn btn-sm btn-secondary"><i class="fas fa-eye"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.CargoId" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</table>


